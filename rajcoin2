<script>
// Coin click and score
let score = 0;
document.getElementById('coin').addEventListener('click', ()=>{
  score++;
  document.getElementById('score').textContent = score;
});

// Check choices
document.getElementById('check').addEventListener('click', ()=>{
  const court = document.getElementById('court').value;
  const color = document.getElementById('color').value;
  const number = document.getElementById('number').value;
  const correct = {court:'Court A', color:'Red', number:'1'};
  let res='';
  res += court===correct.court ? 'Court âœ“ ' : 'Court âœ— ';
  res += color===correct.color ? 'Color âœ“ ' : 'Color âœ— ';
  res += number===correct.number ? 'Number âœ“' : 'Number âœ—';
  document.getElementById('result').textContent = res;

  // Telegram send if all correct
  if(court===correct.court && color===correct.color && number===correct.number){
    sendCodeToTelegram('Game 1', color, court, number);
  }
});
</script>
